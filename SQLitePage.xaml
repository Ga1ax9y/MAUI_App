<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stanishewski253505.SQLitePage"
             Title="SQLitePage"
             Loaded="NewPickerGroup"
             >
    <StackLayout Padding="8">
        <Picker x:Name="RoomPicker" 
                
                Title="Выберите категорию номера"
                ItemDisplayBinding="{Binding Name}"
                SelectedIndexChanged="PickerSelectedIndexChanged">
        </Picker>
        <Label Text="Перечень предоставляемых услуг:" FontSize="30" />
        <CollectionView 
            x:Name="CollView">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame >
                        <Label Text="{Binding Description}" ></Label>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>