<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stanishewski253505.SQLitePage"
             Title="SQLitePage"
             Loaded="NewPickerGroup"
             >
    <StackLayout Padding="8">
        <Label x:Name="header" Text="Выберите категорию номера" FontSize="18" />
        <Picker x:Name="RoomPicker" 
                Title = "Категория номера" 
                SelectedIndexChanged="PickerSelectedIndexChanged" 
                ItemDisplayBinding="{Binding Name}" 
                ItemsSource="{Binding RoomCategories}">


        </Picker>
        <CollectionView x:Name="CollView" Grid.Row="1">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame HeightRequest="50" WidthRequest="300">
                        <Label Text="{Binding Name}" HeightRequest="20"></Label>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </StackLayout>
</ContentPage>