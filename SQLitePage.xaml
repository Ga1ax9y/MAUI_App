<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Stanishewski253505.SQLitePage"
             Title="SQLitePage"
             >
  <ScrollView>
        
        
    <VerticalStackLayout Spacing="10">
        <Picker x:Name="RoomPicker" 
                
                Title="Выберите категорию номера"
                ItemDisplayBinding="{Binding Name}"
                Loaded="RoomPicker_Loaded"
                SelectedIndexChanged="PickerSelectedIndexChanged"
                >
        </Picker>
        
        <Label Text="Перечень предоставляемых услуг:" FontSize="30" />
        
        <CollectionView 
            x:Name="CollView"
            HorizontalOptions="Center"
            WidthRequest="250">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                        <Frame HeightRequest="60"
                               Margin="10">
                            <HorizontalStackLayout>
                                <Label Text="{Binding Description}"/>
                            </HorizontalStackLayout>
                        </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
  </ScrollView>
</ContentPage>